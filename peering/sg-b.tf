resource "aws_security_group" "allow_ssh_b" {
  name        = "allow_ssh"
  description = "Allow SSH inbound traffic"
  vpc_id = module.vpc_b.vpc_id

  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  tags = {
    Environment = var.environment
  }
}